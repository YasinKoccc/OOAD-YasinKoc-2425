<Window x:Class="WpfRaadLand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Height="191" Width="668">
            <Image x:Name="img1" Source="/WpfRaadLand;component/WpfRaadLand materiaal/nieuwzeeland.png" Tag="Nieuw-Zeeland" MouseUp="Image_MouseUp" Margin="10"/>
            <Image x:Name="img2" Source="/WpfRaadLand;component/WpfRaadLand materiaal/finland.png" Tag="Finland" MouseUp="Image_MouseUp" Margin="10"/>
            <Image x:Name="img3" Source="/WpfRaadLand;component/WpfRaadLand materiaal/argentina.png" Tag="Argentinië" MouseUp="Image_MouseUp" Margin="10"/>
            <Image x:Name="img4" Source="/WpfRaadLand;component/WpfRaadLand materiaal/marokko.png" Tag="Marokko" MouseUp="Image_MouseUp" Margin="10"/>
            <Image x:Name="img5" Source="/WpfRaadLand;component/WpfRaadLand materiaal/japan.png" Tag="Japan" MouseUp="Image_MouseUp"/>
        </StackPanel>
        <Button x:Name="btnStart" Content="START" Click="BtnStart_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="83,307,0,0" Height="33" Width="116"/>
        <TextBlock x:Name="txtResult" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="83,254,0,0" FontSize="16" Text="Duid het juist land aan! Ben je klaar?"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="83,0,0,31" Width="654" Height="22" Background="AliceBlue"/>
    </Grid>
</Window>
