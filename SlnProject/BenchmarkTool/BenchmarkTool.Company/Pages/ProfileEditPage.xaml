<Page x:Class="BenchmarkTool.Company.Pages.ProfileEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BenchmarkTool.Company.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfileEditPage">

    <Grid Margin="20">
        <StackPanel Width="300" HorizontalAlignment="Center">
            <TextBlock Text="Profiel wijzigen" FontSize="24" FontWeight="Bold" Margin="0 0 0 20"/>

            <TextBlock Text="Naam:"/>
            <TextBox x:Name="txtName" Margin="0 0 0 10"/>

            <TextBlock Text="Contact:"/>
            <TextBox x:Name="txtContact" Margin="0 0 0 10"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail" Margin="0 0 0 10"/>

            <Button Content="Opslaan" Click="Save_Click" Width="100" HorizontalAlignment="Center" Margin="0 20 0 0"/>
        </StackPanel>
    </Grid>
</Page>
