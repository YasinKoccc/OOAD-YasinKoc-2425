<Page x:Class="BenchmarkTool.Company.Pages.BenchmarkPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BenchmarkTool.Company.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BenchmarkPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10" HorizontalAlignment="Left" >
            <TextBlock Text="Sector:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="cmbSector" Width="150" SelectionChanged="Filters_Changed"/>
            <TextBlock Text="Jaar:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <ComboBox x:Name="cmbYear" Width="100" SelectionChanged="Filters_Changed"/>
        </StackPanel>

        <ListView x:Name="lvBenchmark" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Bedrijf" Width="150" DisplayMemberBinding="{Binding Company.Name}"/>
                    <GridViewColumn Header="Sector" Width="120" DisplayMemberBinding="{Binding Company.Sector}"/>
                    <GridViewColumn Header="Jaar" Width="80" DisplayMemberBinding="{Binding Report.Year}"/>
                    <GridViewColumn Header="FTE" Width="80" DisplayMemberBinding="{Binding Report.Fte}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
