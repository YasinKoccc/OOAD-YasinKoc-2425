<Page x:Class="BenchmarkTool.Company.Pages.YearReportEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BenchmarkTool.Company.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="YearReportEditPage">

    <Grid Margin="20">
        <StackPanel Width="250" HorizontalAlignment="Center">
            <TextBlock Text="Jaar:"/>
            <TextBox x:Name="txtYear" Margin="0 0 0 10"/>
            <TextBlock Text="FTE:"/>
            <TextBox x:Name="txtFte" Margin="0 0 0 10"/>
            <Button Content="Opslaan" Click="Save_Click" Width="100" HorizontalAlignment="Center" Margin="0 20 0 0"/>
            <Button Content="Terug" Click="BtnTerug_Click" Width="100" Margin="0 10 0 20"/>
        </StackPanel>
    </Grid>
</Page>
