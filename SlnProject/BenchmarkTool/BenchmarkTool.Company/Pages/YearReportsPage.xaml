<Page x:Class="BenchmarkTool.Company.Pages.YearReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BenchmarkTool.Company.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="YearReportsPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Jaarrapporten" FontSize="24" FontWeight="Bold" Margin="0 0 0 20"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 0 10" Grid.Row="0">
            <Button Content="Toevoegen" Click="BtnToevoegen_Click" Width="100" Margin="0 0 10 0"/>
            <Button Content="Bewerken" Click="BtnBewerken_Click" Width="100" Margin="0 0 10 0"/>
            <Button Content="Verwijderen" Click="BtnVerwijderen_Click" Width="100"/>
        </StackPanel>


        <ListView x:Name="lvReports" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Jaar" DisplayMemberBinding="{Binding Year}" Width="80"/>
                    <GridViewColumn Header="FTE" DisplayMemberBinding="{Binding Fte}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
