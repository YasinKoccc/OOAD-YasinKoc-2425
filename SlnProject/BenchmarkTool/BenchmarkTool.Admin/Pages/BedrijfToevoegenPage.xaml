<Page x:Class="BenchmarkTool.Admin.Pages.BedrijfToevoegenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BenchmarkTool.Admin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Bedrijf Toevoegen">

    <ScrollViewer>
        <StackPanel Margin="20" Width="400">

            <TextBlock Text="Bedrijf toevoegen" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>

            <TextBlock Text="Naam:"/>
            <TextBox x:Name="txtName" Margin="0 0 0 10"/>

            <TextBlock Text="Contactpersoon:"/>
            <TextBox x:Name="txtContact" Margin="0 0 0 10"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail" Margin="0 0 0 10"/>

            <TextBlock Text="Login:"/>
            <TextBox x:Name="txtLogin" Margin="0 0 0 10"/>

            <TextBlock Text="Wachtwoord:"/>
            <PasswordBox x:Name="pwdPassword" Margin="0 0 0 10"/>

            <Button Content="Toevoegen" Click="Toevoegen_Click" Width="100" HorizontalAlignment="Left" Margin="0 10 0 0"/>


            <TextBlock x:Name="txtStatus" Foreground="Red" Margin="0 10 0 0"/>

        </StackPanel>
    </ScrollViewer>

</Page>
